---
import { pathList } from '../../../../constants/pathList';
import { retrieveTranslation } from '../../../../locales/i18n';

interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<style>
  .Taxonomy {
    padding: var(--space-component-1);
    margin-top: var(--space-component-2);
    border-radius: var(--border-radius);
    font-size: var(--font-size-note);
    line-height: var(--line-height-note);
  }

  .Tag {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-component-1);
    margin: 0;
  }

  .Tag > dd {
    display: flex;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    margin: 0;
  }

  .Tag a {
    padding: 0 var(--space-component-1);
    text-decoration: none;
  }
</style>

<div class="Taxonomy">
  <dl class="Tag">
    <dt>{retrieveTranslation('entry.metadata.tags')}</dt>
    {
      tags.map((tag) => (
        <dd>
          <a href={`/${pathList.tags}/${tag}`}>{tag}</a>
        </dd>
      ))
    }
  </dl>
</div>
