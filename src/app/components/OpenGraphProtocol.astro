---
import { FALLBACK_OG_IMAGE_URL, OG_IMAGE_PATH, SITE_URL } from '../../../constants/site_data';
import { retrieveTranslation } from '../locales/i18n';

interface Props {
  title: string;
  description: string;
  slug: string | null;
}

const siteTitle = retrieveTranslation('website.title');
const { title, description, slug } = Astro.props;
---

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={siteTitle} />
<meta property="og:url" content={SITE_URL} />
<meta property="og:image" content={slug === null ? FALLBACK_OG_IMAGE_URL : `${OG_IMAGE_PATH}/${slug}.png`} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
