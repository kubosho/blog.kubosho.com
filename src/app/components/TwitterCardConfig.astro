---
import { FALLBACK_OG_IMAGE_URL, OG_IMAGE_PATH, TWITTER_ACCOUNT_ID } from '../../../constants/site_data';

interface Props {
  slug: string | null;
}

const { slug } = Astro.props;
---

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={slug === null ? FALLBACK_OG_IMAGE_URL : `${OG_IMAGE_PATH}/${slug}.png`} />
<meta name="twitter:site" content={`@${TWITTER_ACCOUNT_ID}`} />
